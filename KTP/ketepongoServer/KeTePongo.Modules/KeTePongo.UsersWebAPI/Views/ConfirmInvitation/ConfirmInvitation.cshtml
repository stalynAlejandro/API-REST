@model KeTePongo.UsersWebAPI.ViewModels.UserInvitationViewModel

@{
    ViewData["Title"] = T["Confirm Invitation"];
}

<h1 id="mainTitle">T["Complete your profile"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="OID" />
                <input type="hidden" asp-for="Token" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="hidden" asp-for="Email" />
                <input class="form-control" Text value="@Model.Email" disabled="disabled" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" maxlength="20" minlength="6" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@T["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>