@model KeTePongo.ProviderWebAPI.ViewModels.ProviderInvitationValidationViewModel

@{
    ViewData["Title"] = "ConfirmInvitation";
}

@if (Model.OldProviderTradeName != null) {
<h1 id="mainTitle">Change Your Provider</h1>
} else {
    <h1  id="mainTitle">WELCOME TO <b>@Model.NewProviderTradeName</b></h1>
}
<div class="row">
    <div class="col-md">
        @if (Model.OldProviderTradeName != null)
        {
            <h2>ACTUALMENTE PERTENECES A ESTE COMERCIO: @Model.OldProviderTradeName</h2>
        }
        <h2>ESTÁS A PUNTO DE VINCULARTE A ESTE COMERCIO: @Model.NewProviderTradeName</h2>
        <h3>¿ESTÁS SEGURO?</h3>
        <form asp-action="PostConsumerInvitationValidation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="OID" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Email" />
            </div>
            <div class="form-group">
                <input type="submit" name="submit" value="Guardar" class="btn btn-primary" />
                <input type="submit" name="submit" value="Cancelar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>