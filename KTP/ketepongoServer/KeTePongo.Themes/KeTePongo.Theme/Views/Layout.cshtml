<!DOCTYPE html>
<html lang="@Orchard.CultureName()" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;700;800&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0" />
    <meta charset="utf-8" />
    <style asp-name="DefaultCss"></style>
    <title>@RenderTitleSegments(Site.SiteName, "before")</title>
    @await RenderSectionAsync("HeadMeta", required: false)
    <resources type="Meta" />
    <resources type="HeadLink" />
    <resources type="Stylesheet" />
    <resources type="HeadScript" />


</head>
@{
    var anyError = false;
    var cssClassBody = anyError ? "error-body" : "main-body";
}
<body class=@cssClassBody dir="@Orchard.CultureDir()">
    <header class="header headroom headroom--not-bottom headroom--pinned headroom--top">
        <nav class="navbar navbar-expand-lg navbar-light container">
            <a class="navbar-brand js-page-scroll" href="https://www.ketepongo.com/">
                <img class="main-body__img" src="~/KeTePongo.Theme/img/ktp-logoweb-yellow.png" />
            </a>
        </nav>
    </header>

    @if (anyError) {
        <div class="error-body">
            <img class="error-body__img" src="~/KeTePongo.Theme/img/icon_mug.png" />
            <p class="error-body__title">¡¡UPSSS!!</p>
            <p class="error-body__text">El servidor, algo pasa en el servidor.<br />Inténtalo de nuevo en lo que dura<br />tomarse un café.</p>
            <p class="error-body__mobiletext">El servidor, algo pasa en el servidor. Inténtalo de nuevo en lo que dura tomarse un café</p>
        </div>
    }

    @await RenderSectionAsync("Header", required: false)
    <main role="main" class="container">
        @await RenderSectionAsync("Messages", required: false)
        @await RenderBodyAsync()
    </main>

    @await RenderSectionAsync("Footer", required: false)
    <resources type="FootScript" />
    <!--Footer Impacta-->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md col-xl-2 text-center text-md-left">
                    <h2 class="footer__titulo">Páginas</h2>
                    <div class="footer__menu">
                        <a href="https://www.ketepongo.com" target="_self" class="js-page-scroll">Inicio</a>
                        <a href="https://www.ketepongo.com/#que-es" target="_self" class="js-page-scroll">¿Qué es?</a>
                        <a href="https://www.ketepongo.com/#ventajas" target="_self" class="js-page-scroll">Ventajas</a>
                        <a href="https://www.ketepongo.com/#como-funciona" target="_self" class="js-page-scroll">¿Cómo funciona?</a>
                    </div>
                </div>
                <div class="col-12 col-md col-xl-2 text-center text-md-left">
                    <h2 class="footer__titulo">Términos Legales</h2>
                    <div class="footer__menu">
                        <a href="https://www.ketepongo.com/legal/avisolegal/" target="_self" class="js-page-scroll">Aviso Legal</a>
                        <a href="https://www.ketepongo.com/legal/privacidad/" target="_self" class="js-page-scroll">Política de Privacidad</a>
                        <a href="https://www.ketepongo.com/legal/cookies/" target="_self" class="js-page-scroll">Política de Cookies</a>
                        <a href="https://www.ketepongo.com/legal/condicionesgenerales/" target="_self" class="js-page-scroll">Condiciones Generales</a>
                    </div>
                </div>
                <div class="col-12 col-md col-xl-2 text-center text-md-left">
                    <h2 class="footer__titulo">Contacto</h2>
                    <div class="footer__menu">
                        <a href="mailto:app@ketepongo.com" target="_blank">app@ketepongo.com</a>
                    </div>
                </div>
                <div class="col-12 col-md offset-xl-2 col-xl-2 text-center text-md-left">
                    <h2 class="footer__titulo--redes">Síguenos</h2>
                    <div class="footer__redes">
                        <a href="https://www.facebook.com/ketepongo.es/" target="_blank">
                            <img src="~/KeTePongo.Theme/img/facebook.png" alt="facebook" />
                        </a>
                        <a href="https://www.instagram.com/ketepongo_es/" target="_blank">
                            <img src="~/KeTePongo.Theme/img/instagram.png" alt="instagram" />
                        </a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-lg-3">
                    <img src="~/KeTePongo.Theme/img/logo-ktp-footer.png" alt="Logo Ketepongo" class="footer__logo" />
                </div>
                <div class="col-12 offset-lg-5 col-lg footer__descarga">
                    ::before
                    <h2 class="footer__titulo--descarga">¡Descárgate la App!</h2>
                    <div class="row">
                        <div class="col text-right">
                            <a href="https://play.google.com/store/apps/details?id=com.ketepongobusiness&hl=es" target="_blank">
                                <img src="~/KeTePongo.Theme/img/google-badge.png" alt="Disponible en Google Play" />
                            </a>
                        </div>
                        <div class="col text-left">
                            <a href="https://apps.apple.com/us/app/id1515453438" target="_blank">
                                <img src="~/KeTePongo.Theme/img/apple-badge.png" alt="Disponible en Apple Store" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    @Html.Partial("../Partials/Cookies.cshtml")

</body>
</html>

